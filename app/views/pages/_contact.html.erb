<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Contactez-nous</h2>
        <h3 class="section-subheading text-muted">Pour plus d'informations ou pour recevoir le catalogue complet de nos produits, contactez-nous !</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
        <form id="contactForm" name="sentMessage" novalidate>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :name, :required => true, :class=>"form-control", :placeholder=>"Votre nom et prÃ©nom *", :id=>"name", :type=>"text", label: false %>
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <%= f.input :email, :required => true, :class=>"form-control", :placeholder=>"Votre email *", :id=>"email", :type=>"text", label: false %>
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <%= f.input :country, prompt: 'Votre pays de livraison *', :required => true, :class=>"form-control", :placeholder=>"Votre pays de livraison *", :id=>"country", label: false %>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                 <%= f.input :message, :as => :text, :required => true, :class=>"form-control", :placeholder=>"Votre message *", :id=>"message", :type=>"text", label: false %>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <%= f.button :submit, 'Envoyer', :class=> "btn btn-xl", :id=>"sendMessageButton" %>
            </div>
          </div>
        </form>
        <% end %>
      </div>
    </div>
  </div>
</section>
